class Explosion extends GraphicObject
{
  float timer;
  
  
  int canonX, canonY;
   
//======================================================================================================   
  
  Explosion (PVector loc) 
  {
    location = loc;
    timer = 15;
  }

//======================================================================================================  
  
  void update (float deltaTime) 
  {
    timer--;
  }
  
//======================================================================================================  
  
  void display ()
  {
    noStroke();
    fill (255,140,0, 255);
    ellipse (location.x, location.y, 50, 50); // Dimension à l'échelle de la masse  
  }
  
//======================================================================================================  

}
